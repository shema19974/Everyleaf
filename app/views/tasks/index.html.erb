<p id="notice"><%= notice %></p>
<h1>Tasks</h1>
<%= search_form_for(@search,local: true) do |f| %>
  <div>
    <%= f.label :title_cont, "Enter the title" %>
    <%= f.search_field :title_cont %> 
  </div> 
  <div>
    <%= f.label :status_cont, "Enter the status" %>
    <%= f.search_field :status_cont %> 
  </div> 
  <div>
    <%= f.submit "Search"%>
  </div>
<% end %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Created_Time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>  
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.created_at %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Task', new_task_path, style:'margin-bottom:20px;'%>
<br>
<%= link_to 'Task sorted with created_at', tasks_path, style:'margin-right:20px;margin-top:20px;'%>
<%= link_to 'Task sorted with end_date', tasks_path(sort_with:'true')%>

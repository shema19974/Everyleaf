<p id="notice"><%= notice %></p>
<h1>All Tasks</h1>
<%= search_form_for @search do |f| %>
  <div>
    <%= f.label :title_cont, "Enter the title"%>
    <%= f.text_field :title_cont%>
  </div>
  <div>
    <%= f.label :status_cont, "Enter the status"%>
    <%= f.text_field :status_cont%>
  </div>
  <%= f.submit "Search"%>
<%end%>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Created_Time</th>
      <th>Status</th>
      <th>Priority</th>

      <th colspan="3"></th>
    </tr>
    
  </thead>  
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.created_at %></td>
        <td><%= task.status%></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @tasks %>
<%= link_to 'New Task', new_task_path, style:'margin-bottom:20px;'%>
<br>
<%= link_to 'Sort By created_at', tasks_path(sort_with_created_at: 'true'), style:"margin-right:20px;"%>
<%= link_to 'Sort By deadline', tasks_path(sort_with_ended_at: 'true'), style:"margin-right:20px;"%>
<%= link_to 'Sort By Priority', tasks_path(sort_with_priority: 'true'), style:"margin-right:20px;"%> 




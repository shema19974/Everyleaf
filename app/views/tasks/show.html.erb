<div class="card container navigation_bar">
   <h6>Task Details<h6>
  <div class="card-body">
    <p>
    <strong>Title:</strong>
    <%= @task.title %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @task.content %>
    </p>

    <p>
      <strong>Start date:</strong>
      <%= @task.start_date %>
    </p>

    <p>
      <strong>End date:</strong>
      <%= @task.end_date %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @task.status %>
    </p>
    <p>
      <strong>Priority:</strong>
      <%= @task.priority %>
    </p>
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_task_path(@task), class:'btn btn-warning' %> 
      <%= link_to 'Back', tasks_path, class:'btn btn-secondary' %>
  </div>
</div>
